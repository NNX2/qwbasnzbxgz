local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local vehicle = nil -- Vous devez définir comment obtenir le véhicule du joueur
local flying = false
local originalSpeed = 20 -- Vitesse originale du véhicule
local boostedSpeed = 30 -- Vitesse augmentée en mode vol

-- Fonction pour activer ou désactiver le vol
local function toggleFlight()
    flying = not flying
    if flying then
        vehicle.BodyVelocity.Velocity = Vector3.new(0, 20, 0) -- Modifier pour ajuster la direction et la force du vol
        vehicle.BodyVelocity.MaxForce = Vector3.new(0, 400000, 0)
        vehicle.Configuration.Speed.Value = boostedSpeed
    else
        vehicle.BodyVelocity.Velocity = Vector3.new(0, 0, 0)
        vehicle.BodyVelocity.MaxForce = Vector3.new(0, 0, 0)
        vehicle.Configuration.Speed.Value = originalSpeed
    end
end

-- Écouter l'appui sur la touche "y"
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if not gameProcessedEvent and input.KeyCode == Enum.KeyCode.Y then
        toggleFlight()
    end
end)

-- Initialisation
-- Vous devez définir comment le joueur obtient son véhicule ici
-- Assurez-vous que vehicle est une référence valide au véhicule du joueur avant d'activer le script
